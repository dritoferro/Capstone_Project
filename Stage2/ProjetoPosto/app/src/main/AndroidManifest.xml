<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tagliaferro.adriano.projetoposto">

    <uses-feature android:name="android.hardware.camera2" android:required="false" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.VeiculoActivity" android:parentActivityName=".view.MainActivity" />
        <activity android:name=".view.PostoActivity" android:parentActivityName=".view.MainActivity" />
        <activity android:name=".view.AbastecimentoActivity" android:parentActivityName=".view.MainActivity" />
        <provider
            android:authorities="tagliaferro.adriano.projetoposto"
            android:name=".model.ControleProvider" />
    </application>

</manifest>